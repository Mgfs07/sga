<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">


    <changeSet id="1718861930925-1" author="basis-colatina">
        <createTable tableName="local_equipamento">
            <column name="quantidade" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="id_local" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_local_equipamento"/>
            </column>
            <column name="id_equipamento" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_local_equipamento"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="id_equipamento" baseTableName="local_equipamento" constraintName="FK_LOCAL_EQUIPAMENTO_ON_ID_EQUIPAMENTO" referencedColumnNames="id" referencedTableName="equipamento"/>
        <addForeignKeyConstraint baseColumnNames="id_local" baseTableName="local_equipamento" constraintName="FK_LOCAL_EQUIPAMENTO_ON_ID_LOCAL" referencedColumnNames="id" referencedTableName="local"/>
    </changeSet>
</databaseChangeLog>
