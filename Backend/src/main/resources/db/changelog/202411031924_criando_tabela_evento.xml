<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">


    <changeSet id="1718845587018-1" author="basis-colatina">
        <createTable tableName="evento">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_evento"/>
            </column>
            <column name="descricao" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="hora_inicio" type="TIME">
                <constraints nullable="false"/>
            </column>
            <column name="hora_fim" type="TIME">
                <constraints nullable="false"/>
            </column>
            <column name="data" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="id_local" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="matricula_usuario_solicitante" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="id_local" baseTableName="evento" constraintName="FK_EVENTO_ON_ID_LOCAL" referencedColumnNames="id" referencedTableName="local"/>
        <addForeignKeyConstraint baseColumnNames="matricula_usuario_solicitante" baseTableName="evento" constraintName="FK_EVENTO_ON_MATRICULA_USUARIO_SOLICITANTE" referencedColumnNames="matricula" referencedTableName="usuario"/>
    </changeSet>
</databaseChangeLog>
