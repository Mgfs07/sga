<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">


    <changeSet id="1718845663513-1" author="basis-colatina">
        <createTable tableName="auditoria_alocacao">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_auditoria_alocacao"/>
            </column>
            <column name="acao" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="data" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="matricula_usuario_logado" type="VARCHAR(255)"/>
            <column name="id_aula" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="id_aula" baseTableName="auditoria_alocacao" constraintName="FK_AUDITORIA_ALOCACAO_ON_ID_AULA" referencedColumnNames="id" referencedTableName="aula"/>
        <addForeignKeyConstraint baseColumnNames="matricula_usuario_logado" baseTableName="auditoria_alocacao" constraintName="FK_AUDITORIA_ALOCACAO_ON_MATRICULA_USUARIO_LOGADO" referencedColumnNames="matricula" referencedTableName="usuario"/>
    </changeSet>
</databaseChangeLog>
